<h1>Listing assignments</h1>

<table>
  <tr>
    <th>Submission due</th>
    <th>Review due</th>
    <th>Reviews required</th>
    <th>Draft</th>
    <th>Course</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.submission_due %></td>
    <td><%= assignment.review_due %></td>
    <td><%= assignment.reviews_required %></td>
    <td><%= assignment.draft %></td>
    <td><%= assignment.course_id %></td>
    <td><%= link_to 'Show', assignment %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
    <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

