<h1 class="name"><%= @assignment.name %></h1>

<% if @assignment.id %>
    <div class="tabs">
        <div class="tab <%= 'active' if controller.controller_name == 'submissions' %>">
            <%= link_to assignment_submissions_path(@assignment) do %>
                Submissions
            <% end %>
        </div>

        <!-- Temporarily removed grade distribution tab -->

        <div class="tab <%= 'active' if controller.controller_name == 'questions' %>">
            <%= link_to assignment_questions_path(@assignment) do %>
                Rubric
            <% end %>
        </div>

        <div class="tab <%= 'active' if controller.controller_name == 'assignments' %>">
            <%= link_to edit_assignment_path(@assignment) do %>
                Settings
            <% end %>
        </div>
    </div>
<% end %>