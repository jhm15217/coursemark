= form_for @membership do |f|
  - if @membership.errors.any?
    #error_explanation
      %h2= "#{pluralize(@membership.errors.count, "error")} prohibited this membership from being saved:"
      %ul
        - @membership.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :team
    = f.text_field :team
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :assignment_id
    = f.number_field :assignment_id
  .actions
    = f.submit 'Save'
