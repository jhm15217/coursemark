<%= nested_form_for [@course, @assignment, @question, @scale]  do |f| %>

  <% if @scale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scale.errors.count, "error") %> prohibited this scale from being saved:</h2>

      <ul>
      <% @scale.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :value %><br />
    <%= f.number_field :value %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :question_id %><br />
    <%= f.collection_select :question_id, Question.all, :id, :question_text, :prompt => "Select question..." %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
