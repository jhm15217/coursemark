<div id="header">
    <h1 class="name">Account Settings</h1>
    <div class="tabs">
        <div class="tab logout">
        	<%= link_to edit_user_path(current_user) do %>
                Settings
            <% end %>
            <%= link_to logout_path do %>
                Sign out
            <% end %>
        </div>
    </div>
</div>

<div id="headerSpacer" style="height:90px;"></div>

<h2>Enrollments</h2>

<table>
  <tr>
    <th>Course</th>
    <th>Type</th>
    <th>&nbsp;</th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <td><%= registration.course.name %></td>
    <td><%= registration.instructor ? "Course Staff" : "Student"  %></td>
    <td><%= link_to 'Leave Course', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user.instructor?(@course) %>
  <div class="button" style="float:left;">
    <%= link_to 'Create Course', new_course_path %>
  </div>
<% end %>

<div class="button" style="float:left;">
  <%= link_to 'Join Course', new_registration_path %>
</div>

<div class="clearfix"></div>

<h2>Login information</h2>

<%= render 'edit_form' %>