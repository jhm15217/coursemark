<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="editAccountFields">
    <div class="field">
      <%= f.text_field :first_name, :placeholder => "First Name" %>
    </div>
    <div class="field">
      <%= f.text_field :last_name, :placeholder => "Last Name" %>
    </div>
    <div class="field">
       <%= @user.email %>
    </div>
    <div class="field">
     <%= f.password_field :password, :placeholder => "New Password" %> 
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, :placeholder => "New Password Confirmation" %> 
    </div>
    <div class="actions">
      <%= f.submit "Update account", :class => 'update_account_btn' %>
    </div>
  </div>
<% end %>
