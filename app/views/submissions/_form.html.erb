<%= form_for [@course, @assignment, @submission] do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :submitted %><br />
    <%= f.datetime_select :submitted %>
  </div>
  <div class="field">
    <%= f.label :submission %><br />
    <%= f.file_field :submission %>
  </div>
  <div class="field">
    <%= f.label :assignment_id %><br />
    <%= f.collection_select :assignment_id, Assignment.all, :id, :name, :prompt => "Select assignment..." %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, User.all, :id, :name, :prompt => "Select user..." %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
