<% if @questions.length > 0 %>
<table>
  <tr>
    <th>Question</th>
    <th>Weight</th>
    <th>Written response required</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.question_text %></td>
    <td><%= question.question_weight %></td>
    <td><%= question.written_response_required %></td>
    <td><%= link_to 'Show', [@assignment, question] %></td>
    <td><%= link_to 'Edit', [:edit, @assignment, question] %></td>
    <td><%= link_to 'Destroy', [@assignment, question], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Question',  new_assignment_question_path(@assignment) %>
<% else %>
    <h2 class="noData">
      <%= link_to 'Create first rubric question.',  new_assignment_question_path(@assignment) %>
    </h2>
<% end %>