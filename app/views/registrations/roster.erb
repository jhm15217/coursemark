<div id="header">
    <h1 class="name">My Students</h1>
    <div class="tabs">
        <div class="tab logout">
            <%= link_to logout_path do %>
                Sign out
            <% end %>
        </div>
    </div>
</div>

<div id="headerSpacer"></div>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Email</th>
    <th>&nbsp;</th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <td><%= registration.user.name %></td>
    <td><%= registration.instructor ? "Course Staff" : "Student"  %></td>
    <td><%= registration.user.email %></td>
    <td><%= link_to 'Remove', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class="button">
  <%= link_to 'Add Student', new_registration_path %>
</div>