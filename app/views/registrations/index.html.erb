<div id="header">
    <h1 class="name">My Courses</h1>
    <div class="tabs">
        <div class="tab logout">
            <%= link_to edit_user_path(current_user) do %>
                Settings
            <% end %>
            <%= link_to logout_path do %>
                Sign out
            <% end %>
        </div>
    </div>
</div>

<div id="headerSpacer"></div>

<table>
  <tr>
    <th>Course</th>
    <th>Type</th>
    <th>&nbsp;</th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <td><%= registration.course.name %></td>
    <td><%= registration.instructor ? "Course Staff" : "Student"  %></td>
    <td><%= link_to 'Remove', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to new_registration_path do %>
  <div class="button">Add Course</div>
<% end %>
